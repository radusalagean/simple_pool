{
    "version": "2.0.0",
    "tasks": [
        // Prepare Environment
        {
            "label": "prepare-env",
            "type": "shell",
            "command": "mkdir -p bin/psp",
            "options": {
                "cwd": "${workspaceFolder}/../.."
            },
            "problemMatcher": []
        },

        // Copy assets
        {
            "label": "copy-assets",
            "type": "shell",
            "command": "mkdir -p bin/psp/pool_assets && cp -rv pool_assets/* bin/psp/pool_assets",
            "options": {
                "cwd": "${workspaceFolder}/../.."
            },
            "problemMatcher": []
        },

        // Build tasks
        {
            "label": "cmake",
            "type": "shell",
            "command": "psp-cmake -DCMAKE_BUILD_TYPE=Debug -DBUILD_PRX=1 -B bin/psp ${workspaceFolder}",
            "options": {
                "cwd": "${workspaceFolder}/../.."
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/../../bin/psp"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build",
            "dependsOn": [
                "cmake",
                "make"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },

        // Clean tasks
        {
            "label": "clean-cmake-output",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfv",
                "*CMakeFiles/",
                "cmake_install.cmake",
                "*CMakeCache.txt",
                "Makefile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../../bin/psp"
            },
            "problemMatcher": []
        },
        {
            "label": "clean-make-output",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfv",
                "*.o",
                "*.PBP",
                "*.prx",
                "SimplePool",
                "PARAM.SFO"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../../bin/psp"
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "dependsOn": [
                "clean-cmake-output",
                "clean-make-output"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },

        // Rebuild
        {
            "label": "rebuild",
            "dependsOn": [
                "clean",
                "build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        
        // Debug
        {
            "label": "print-env-variables",
            "type": "shell",
            "command": "env",
            "problemMatcher": []
        }
    ]
}